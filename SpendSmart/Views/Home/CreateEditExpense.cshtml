@{
    ViewData["Title"] = "Create or Edit Expense";
}

@model SpendSmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or Edit Expense</h1>
</div>

<form asp-action="ExpenseForm" asp-controller="Home">

    <label>ID</label>
    <input class="form-control" type="number" placeholder="0" asp-for="ID"/>

    <label class="mt-4">Amount</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Value" step="1" />

    <label class="mt-4">ID</label>
    <input class="form-control" type="text" placeholder="Add Description" asp-for="Description" />

    <button class="btn btn-primary mt-4">Save</button>

</form>
